---
import PostLayout from '@/layouts/Post.astro'
import type { MDXLayoutProps } from 'astro'
import Hero from './_Hero'
import Link from '@/components/Link.astro'

type Props = MDXLayoutProps<{
	title: string
	description: string
}>

const { frontmatter, headings } = Astro.props
---

<PostLayout
	title={frontmatter.title}
	description={frontmatter.description}
	articleClass="[&>section:first-child>h2:first-child]:sr-only"
	{headings}
>
	<Hero client:load slot="hero" />
	<slot />
	<footer
		slot="footer"
		class="prose prose-muted dark:prose-invert mt-20 border-t border-zinc-200 pt-20 dark:border-zinc-800"
	>
		<p>
			Built by <Link href="https://x.com/mbarvian">Max Barvian</Link>. Heavily inspired by the
			<Link href="https://family.co">Family</Link> iOS app. <Link
				href="https://expensive.toys/blog/blur-vignette"
				>Technique for the
				<code>mask-image</code></Link
			> from <Link href="https://x.com/artur_bien">Artur Bie≈Ñ</Link>.
		</p>
	</footer>
</PostLayout>
